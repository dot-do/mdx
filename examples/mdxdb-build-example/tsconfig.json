{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "../.db": ["./.db/index"],
      "../.db/*": ["./.db/*"]
    }
  },
  "include": ["src/**/*.ts", ".db/**/*.d.ts"],
  "exclude": ["node_modules"]
}
