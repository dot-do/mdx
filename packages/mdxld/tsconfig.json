{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/build.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
