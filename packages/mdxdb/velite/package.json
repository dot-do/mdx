    "test:ui": "vitest --ui",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@mdxdb/core": "workspace:*",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.8",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "velite": "^0.1.1",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "velite": "^0.1.1"
  }
}
