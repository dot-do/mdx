{
  "name": "@mdxdb/velite",
  "version": "0.1.0",
  "description": "Velite integration for mdxdb with schema validation",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
