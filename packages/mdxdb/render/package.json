{
  "name": "@mdxdb/render",
  "type": "module",
  "version": "0.1.0",
  "description": "Website rendering with tweakcn styling from YAML",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./tweakcn": {
      "import": "./dist/lib/tweakcn.js",
      "types": "./dist/lib/tweakcn.d.ts"
    },
    "./mdx": {
      "import": "./dist/lib/mdx.js",
      "types": "./dist/lib/mdx.d.ts"
    },
    "./templates": {
      "import": "./dist/lib/templates/index.js",
      "types": "./dist/lib/templates/index.d.ts"
    },
    "./tailwind": {
      "import": "./dist/lib/tailwind.js",
      "types": "./dist/lib/tailwind.d.ts"
    }
  },
  "files": [
    "dist/lib/",
    "examples/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "mdx",
    "render",
    "styling",
    "yaml",
    "tweakcn",
    "tailwind",
    "templates"
  ],
  "dependencies": {
    "unified": "^11.0.4",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-gfm": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "rehype-stringify": "^10.0.0",
    "rehype-slug": "^6.0.0",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.20",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "@mdxdb/core": "workspace:*"
  }
}
