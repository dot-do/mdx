{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "mdxui": ["../mdxui"],
      "mdxui/*": ["../mdxui/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/components/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../mdxui/core" },
    { "path": "../mdxui/ink" }
  ]
}
