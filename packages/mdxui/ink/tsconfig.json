{
  "extends": "../../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.test.ts.bak"],
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
