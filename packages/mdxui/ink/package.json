{
  "name": "@mdxui/ink",
  "version": "0.1.0",
  "description": "Create CLI apps using MDX with React Ink and Pastel",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup && pnpm run build:types",
    "build:types": "./node_modules/.bin/tsc --emitDeclarationOnly --declaration --outDir dist --composite false",
    "dev": "tsup --watch",
    "lint": "echo 'Skipping lint for now'",
    "test": "tsc --noEmit && ava",
    "test:coverage": "ava --coverage",
    "typecheck": "tsc --noEmit",
    "cli": "node dist/cli.js",
    "bundle": "node dist/cli-bundler.js"
  },
  "bin": {
    "ink-mdx": "dist/cli-bundler.js"
  },
  "keywords": [
    "mdx",
    "cli",
    "ink",
    "pastel",
    "react"
  ],
  "author": "MDX Team",
  "license": "MIT",
  "dependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "asciify-image": "^0.1.10",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "esbuild": "^0.19.11",
    "fast-deep-equal": "^3.1.3",
    "figures": "^6.1.0",
    "figlet": "^1.7.0",
    "glob": "^11.0.2",
    "ink": "^6.0.1",
    "ink-big-text": "^2.0.0",
    "ink-link": "^2.0.0",
    "ink-syntax-highlight": "^1.0.0",
    "ink-table": "^3.0.0",
    "ink-task-list": "^2.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "pastel": "^3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-use-precision-timer": "^3.5.6",
    "remark-gfm": "^3.0.1",
    "to-rotated": "^1.0.0",
    "type-fest": "^3.0.0",
    "vfile": "^6.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "ava": "^5.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "ava": {
    "workerThreads": false,
    "timeout": "30s",
    "files": [
      "test/**/*",
      "!test/helpers/**/*",
      "!test/fixtures/**/*"
    ],
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  }
}
