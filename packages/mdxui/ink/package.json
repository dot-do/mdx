{
  "name": "@mdxui/ink",
  "version": "0.1.0",
  "description": "Create CLI apps using MDX with React Ink and Pastel",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist --composite false",
    "dev": "tsup --watch",
    "lint": "echo 'Skipping lint for now'",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "cli": "node dist/cli.js",
    "bundle": "node dist/cli-bundler.js"
  },
  "bin": {
    "ink-mdx": "dist/cli-bundler.js"
  },
  "keywords": [
    "mdx",
    "cli",
    "ink",
    "pastel",
    "react"
  ],
  "author": "MDX Team",
  "license": "MIT",
  "dependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "asciify-image": "^0.1.10",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "esbuild": "^0.19.11",
    "fast-deep-equal": "^3.1.3",
    "figures": "^6.1.0",
    "figlet": "^1.7.0",
    "glob": "^11.0.2",
    "ink": "^4.4.1",
    "ink-big-text": "^2.0.0",
    "ink-link": "^2.0.0",
    "ink-syntax-highlight": "^1.0.0",
    "ink-table": "^3.0.0",
    "ink-task-list": "^2.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "pastel": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "remark-gfm": "^3.0.1",
    "to-rotated": "^1.0.0",
    "type-fest": "^3.0.0",
    "use-interval": "1.4.0",
    "vfile": "^6.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/glob": "^8.1.0",
    "@types/ink-testing-library": "^1.0.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^19.1.5",
    "eslint": "^8.56.0",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  }
}
