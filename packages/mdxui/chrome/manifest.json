{
  "manifest_version": 3,
  "name": "MDX File Viewer",
  "version": "0.1.0",
  "description": "Beautiful syntax highlighting for Markdown, MDX, and llms.txt files.",
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Toggle MDX File Viewer",
    "default_popup": ""
  },
  "icons": {
    "16": "mdxViewer.png",
    "48": "mdxViewer.png",
    "128": "mdxViewer.png"
  },
  "author": "do.industries",
  "homepage_url": "https://do.industries"
}
