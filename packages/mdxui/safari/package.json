{
  "name": "@mdxui/safari",
  "type": "module",
  "version": "0.0.0",
  "description": "Safari extension for rendering text, markdown, mdx, and mdxld files with Monaco Editor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "manifest.json",
    "*.js",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup && cp manifest.json dist/",
    "dev": "tsup --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "echo 'No tests yet'",
    "test:coverage": "echo 'No tests yet'"
  },
  "keywords": [
    "safari",
    "extension",
    "monaco",
    "editor",
    "markdown",
    "mdx",
    "mdxld"
  ],
  "author": "MDX Team",
  "dependencies": {
    "@mdxui/browser": "workspace:*",
    "monaco-editor": "^0.52.2",
    "shiki": "^3.8.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/chrome": "^0.1.0",
    "esbuild": "^0.25.6",
    "eslint": "^9.27.0",
    "tsup": "^8.0.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "vitest": "^3.1.4"
  }
}
