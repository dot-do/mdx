{
  "name": "mdxui",
  "type": "module",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "*.js",
    "*.d.ts"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": ["./dist/*.mjs", "./dist/*.d.mts"]
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:styles",
    "build:styles": "tailwindcss -i ./components/styles.css -o ./dist/index.css",
    "build:lib": "tsup",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./components/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint components --max-warnings 0",
    "test": "vitest run"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@tremor/react": "4.0.0-beta-tremor-v4.4",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.0",
    "date-fns": "^3.3.1",
    "embla-carousel-react": "^8.0.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.294.0",
    "react-day-picker": "8.10.1",
    "react-hook-form": "^7.49.3",
    "react-resizable-panels": "^2.0.1",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "recharts": "^2.12.1",
    "vaul": "^0.9.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/tsup-config": "workspace:*",
    "tsup": "^8.0.2",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "eslint": "^9.27.0",
    "lucide-react": "^0.330.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.3.0",
    "typescript": "5.8.2",
    "vitest": "^3.1.4"
  }
}
