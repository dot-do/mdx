{
  "name": "mdx",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/**\"",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:schema": "tsx scripts/generate-schema-mdx.ts",
    "version": "changeset version",
    "release": "turbo run build && changeset publish",
    "postinstall": "npm run build:packages"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.21",
    "globby": "^14.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "turbo": "^2.5.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 160,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "@mdxdb/core": "workspace:^",
    "@mdxdb/fs": "workspace:^",
    "@mdxdb/sqlite": "workspace:^"
  },
  "workspaces": [
    "packages/**"
  ]
}
